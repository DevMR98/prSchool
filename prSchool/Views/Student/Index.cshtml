@model IEnumerable<prSchool.DTOs.StudentDto>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center my-5">Students</h1>

<div class="mb-3">
    <a class="btn btn-success" href="@Url.Action("Create","Student")">Create</a>
</div>

<table class="table table-dark">
    <thead>
        <tr>
            <th>StudentID</th>
            <td>AccountNumber</td>
            <td>Name</td>
            <td>LastName</td>
            <td>Email</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var student in Model)
            {
                <tr>
                    <td>@student.StudentID</td>
                    <td>@student.AccountNumber</td>
                    <td>@student.Name</td>
                    <td>@student.LastName</td>
                    <td>@student.email</td>
                    <td>
                    <div class="d-flex gap-3">
                            <a asp-action="GetById" asp-route-id="@student.StudentID" class="btn btn-warning">
                                Update
                            </a>
                            <a class="btn btn-danger">
                                Delete
                            </a>
                    </div>
                    </td>
                </tr>
            }
        }


    </tbody>

</table>


